# Copy this file to `.env` and adjust values before running `docker compose up --build`.

# Keep false for no-op/log email sender in local development.
# Set to true only when SMTP settings below are valid.
EMAIL_ENABLED=false

EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Second
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USE_SSL=true
EMAIL_USE_DEFAULT_CREDENTIALS=false
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_TIMEOUT_MILLISECONDS=10000
